# ===========================================
# Job Hunter API - Environment Configuration
# ===========================================

# Application
APP_ENV=development  # development | staging | production
DEBUG=true
LOG_LEVEL=INFO

# Database
# SQLite for local development
DATABASE_URL=sqlite+aiosqlite:///./data/job_hunter.db
# PostgreSQL for production (Render)
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/job_hunter

# Anthropic Claude SDK (Option 1: Direct API)
# ANTHROPIC_API_KEY=sk-ant-...

# AWS Bedrock (Option 2: Preferred - uses AWS credentials from ~/.aws/credentials)
BEDROCK_ENABLED=true
BEDROCK_REGION=eu-west-2
BEDROCK_MODEL_ID=eu.anthropic.claude-sonnet-4-5-20250929-v1:0

# Langfuse Observability
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# Google OAuth (Gmail integration)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Microsoft OAuth (Outlook integration)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/auth/microsoft/callback

# Encryption key for storing user API keys (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=

# Rate Limiting
MAX_APPLICATIONS_PER_DAY=10
MAX_AUTO_APPLICATIONS_PER_DAY=5
